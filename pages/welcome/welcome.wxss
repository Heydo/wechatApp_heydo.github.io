/* welcome.wxss */
page {
  height: 100%;
  background-color: #b3d4db;
}
.container {
  display: flex;
  flex-direction: column;
  align-items: center;
}
.user_avatar {
  width: 200rpx;
  height: 200rpx;
  margin-top: 160rpx;
}
.user_name {
  font-size: 42rpx;
  font-weight: bold;
  margin-top: 100rpx;
  color: #fff;
}
.moto-container {
  border: 1px solid #405f80;
  width: 500rpx;
  height: 80rpx;
  border-radius: 5px;
  text-align: center;
  margin-top: 200rpx;
}
.moto {
  font-size: 25rpx;
  font-weight: bold;
  line-height: 80rpx;
  color: #405f80;
  letter-spacing: 5rpx;
}